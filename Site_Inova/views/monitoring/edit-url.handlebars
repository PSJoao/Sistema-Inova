{{!< main}}

<div class="content-card">
  <h1 class="page-title">{{title}}</h1>

  <div class="form-container">
    <form action="/madeiramadeira/update-url/{{url.id}}" method="post">
      <div class="form-group">
        <label for="sku">SKU:</label>
        <input type="text" id="sku" name="sku" class="form-control" value="{{url.sku}}" required>
      </div>

      <div class="form-group">
        <label for="url">URL do Produto:</label> {{!-- Nome do campo ajustado para consistência --}}
        <input type="url" id="url" name="url" class="form-control" value="{{url.url}}" required>
      </div>
      
      <div class="form-group">
        <label for="description">Descrição (Nome do Produto):</label>
        <input type="text" id="description" name="description" class="form-control" value="{{url.description}}" required>
      </div>

      <div class="form-actions">
        <button type="submit" class="btn btn-accent"><i class="fas fa-save"></i> Atualizar Produto</button>
        <a href="/madeiramadeira/urls" class="btn btn-outline-accent">Cancelar</a> {{!-- Botão de cancelar exemplo --}}
      </div>
    </form>
  </div>
</div>