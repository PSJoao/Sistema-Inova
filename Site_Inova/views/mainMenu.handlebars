<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{title}} - InovaXPress</title>
  <link rel="shortcut icon" href="/public/icons/favicon.ico" type="image/x-icon">

  <link href="/public/styles/reset.css" rel="stylesheet">
  <link href="/public/styles/theme.css" rel="stylesheet">
  <link href="/public/styles/components.css" rel="stylesheet"> {{!-- Para os botões .btn --}}
  <link href="/public/styles/main-menu.css" rel="stylesheet">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="main-menu-page">

  <header class="main-menu-header">
    <div class="main-menu-title-brand">
      <h1>INOVA</h1><h1 class="accent">X</h1><h1>PRESS</h1>
    </div>
  </header>

  <div class="menu-grid-container">
    {{!-- Monitoramento de Marketplaces (3 itens - módulo médio) --}}
    <div class="module-card module-medium">
      <div class="module-header">
        <i class="fas fa-chart-line module-icon"></i>
        <h2>Monitoramento de Marketplaces</h2>
      </div>
      <div class="module-buttons">
        <a href="/madeira/urls" class="btn btn-accent btn-card"><i class="fas fa-store"></i> Madeira - Lucas</a>
        <a href="/madeiramadeira/urls" class="btn btn-accent btn-card"><i class="fas fa-store"></i> Madeira - Eliane</a>
        <a href="/viavarejo/urls" class="btn btn-accent btn-card"><i class="fas fa-shopping-bag"></i> ViaVarejo</a>
      </div>
    </div>

    {{!-- Notas Fiscais e Faturamento (6 itens - módulo grande) --}}
    <div class="module-card module-large">
      <div class="module-header">
        <i class="fas fa-file-invoice module-icon"></i>
        <h2>Notas Fiscais e Faturamento</h2>
      </div>
      <div class="module-buttons">
        <a href="/emissao" class="btn btn-accent btn-card"><i class="fas fa-barcode"></i> Gerenciar Emissões</a>
        <a href="/emissao/nfe-management" class="btn btn-accent btn-card"><i class="fas fa-sticky-note"></i> Gerar Etiquetas NFe</a>
        <a href="/faturamento-automatico" class="btn btn-accent btn-card"><i class="fas fa-chart-line"></i> Faturador Automático</a>
        <a href="/acompanhamento/pedidos" class="btn btn-accent btn-card"><i class="fas fa-shopping-cart"></i> Gerenciar Pedidos</a>
        <a href="/assistencias" class="btn btn-accent btn-card"><i class="fas fa-file-invoice"></i> Assistências</a>
        <a href="/historico-nfe" class="btn btn-accent btn-card"><i class="fas fa-history"></i> Histórico de Notas</a>
      </div>
    </div>

    {{!-- Produtos (1 item - módulo pequeno) --}}
    <div class="module-card module-small">
      <div class="module-header">
        <i class="fas fa-box module-icon"></i>
        <h2>Produtos</h2>
      </div>
      <div class="module-buttons">
        <a href="/produtos/listagem" class="btn btn-accent btn-card btn-full"><i class="fas fa-box"></i> Gerenciar Produtos</a>
        <a href="/tipos" class="btn btn-accent btn-card btn-full"><i class="fas fa-file-export"></i> Gerenciar Tipos</a>
        <a href="/product-sync" class="btn btn-accent btn-card btn-full"><i class="fas fa-sync"></i> Sincronizar Produtos</a>
      </div>
    </div>

    {{!-- Expedição e Etiquetas (5 itens - módulo grande) --}}
    <div class="module-card module-large">
      <div class="module-header">
        <i class="fas fa-tags module-icon"></i>
        <h2>Expedição e Etiquetas</h2>
      </div>
      <div class="module-buttons">
        <a id="etiquetas-btn" href="/etiquetas" class="btn btn-accent btn-card"><i class="fas fa-tag"></i> Ordenador de Etiquetas</a>
        <a href="/etiquetas/bipagem" class="btn btn-accent btn-card"><i class="fas fa-barcode"></i> Bipagem de Produtos</a>
        <a href="/etiquetas/listagem" class="btn btn-accent btn-card"><i class="fas fa-list"></i> Histórico de Etiquetas</a>
      </div>
    </div>

    {{!-- Conferência (2 itens - módulo pequeno) --}}
    <div class="module-card module-small">
      <div class="module-header">
        <i class="fas fa-check-circle module-icon"></i>
        <h2>Conferência</h2>
      </div>
      <div class="module-buttons">
        <a href="/conferencia/bipagem" class="btn btn-accent btn-card"><i class="fas fa-boxes"></i> Conferência de Expedição</a>
        <a href="/conferencia/gerenciamento-codigos" class="btn btn-accent btn-card"><i class="fas fa-cog"></i> Gerenciar Códigos</a>
      </div>
    </div>

    {{!-- Transporte e Logística (2 itens - módulo pequeno) --}}
    <div class="module-card module-small">
      <div class="module-header">
        <i class="fas fa-truck module-icon"></i>
        <h2>Transporte e Logística</h2>
      </div>
      <div class="module-buttons">
        <a href="/relacoes" class="btn btn-accent btn-card"><i class="fas fa-truck"></i> Gerenciar Relações</a>
        <a href="/rastreio" class="btn btn-accent btn-card"><i class="fas fa-paper-plane"></i> Acompanhamentos</a>
      </div>
    </div>
  </div>

  {{!-- Botão de Sair --}}
  <div class="menu-footer">
    <a href="/logout" class="btn btn-danger btn-logout">
      <i class="fas fa-sign-out-alt"></i> Sair
    </a>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const etiquetasBtn = document.getElementById('etiquetas-btn');
      if (etiquetasBtn) {
        const isMobile = window.innerWidth <= 768;
        etiquetasBtn.href = isMobile ? '/etiquetas/bipagem' : '/etiquetas';
        console.log(isMobile);
        console.log(etiquetasBtn.href);
      }
    });
  </script>

</body>
</html>