{{!-- views/produtos/editar-produto.handlebars --}}
{{!< main}}

{{#section "head"}}
    {{!-- Reutiliza o CSS de formulários do sistema --}}
    <link href="/public/styles/forms.css" rel="stylesheet">
{{/section}}

<div class="content-card">
    <h1 class="page-title">{{title}}</h1>
    <h3 class="page-subtitle">SKU Original: {{produto.sku}}</h3>


    {{!-- Padrão de formulário similar ao de 'editar-assistencia' --}}
    <div class="form-container">
        <form action="/produtos/editar/produto" method="POST">
            
            {{!-- SKU original oculto para identificar o registro no POST --}}
            <input type="hidden" name="old_sku" value="{{produto.sku}}">

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="sku">SKU</label>
                    <input type="text" id="sku" name="sku" class="form-control" value="{{produto.sku}}" required>
                </div>
                <div class="form-group col-md-8">
                    <label for="nome">Nome do Produto</label>
                    <input type="text" id="nome" name="nome" class="form-control" value="{{produto.nome}}">
                </div>
            </div>
            
            <div class="form-row">
                 <div class="form-group col-md-4">
                    <label for="preco_custo">Preço de Custo</label>
                    <input type="number" step="0.01" id="preco_custo" name="preco_custo" class="form-control" value="{{produto.preco_custo}}">
                </div>
            </div>
            
            <hr>

            <div class="form-actions">
                <a href="/produtos/listagem" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            </div>
        </form>
    </div>
</div>